<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET"/>


    <application
        android:largeHeap="true"
        android:hardwareAccelerated="false"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_nlt_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_nlt_foreground"
        android:supportsRtl="true"
        android:theme="@style/Theme.Woodsfly_skip"
        tools:targetApi="31"
        android:networkSecurityConfig="@xml/network_security_config"
        android:usesCleartextTraffic="true"
        >
        <activity
            android:name=".PersonalActivity"
            android:exported="true"/>
        <activity
            android:name=".PersonalSettingsActivity"
            android:exported="false" />
        <activity
            android:name=".PersonalHistoryActivity"
            android:exported="false" />
        <activity
            android:name=".PersonalLoginActivity"
            android:exported="false" />
        <activity
            android:name=".HomeActivity"
            android:exported="true" />
        <activity
            android:name=".SearchActivity"
            android:exported="false" />
        <activity
            android:name=".WelcomeActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Woodsfly_skip">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>