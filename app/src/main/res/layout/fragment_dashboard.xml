<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg02"
    android:padding="16dp">

    <!-- 搜索框 -->
    <!-- 搜索框 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">



        <AutoCompleteTextView
            android:id="@+id/searchEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="搜索"
            android:inputType="text"
            android:imeOptions="actionSearch"/>

        <ImageView
            android:id="@+id/searchImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_search" />

        <!--        <Button-->
        <!--            android:id="@+id/searchButton"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:text="搜索" />-->
    </LinearLayout>

    <!-- 第二行：ImageView和TextView -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/image01"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/a1" />

        <TextView
            android:id="@+id/textViewBirdStar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="鸟界明星"
            android:layout_gravity="center"
            android:textSize="18sp" />
    </LinearLayout>

    <!-- 第三行和第四行的ImageView -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <!-- 第三行的ImageView -->
        <ImageView
            android:id="@+id/image02"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:src="@drawable/b1" />

        <ImageView
            android:id="@+id/image03"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:src="@drawable/b2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <!-- 第四行的ImageView -->
        <ImageView
            android:id="@+id/image04"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:src="@drawable/b3" />

        <ImageView
            android:id="@+id/image05"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:src="@drawable/b4" />
    </LinearLayout>

    <!-- 以此类推，为image06到image09添加ImageView -->

    <!-- 第五行的ImageView和TextView -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/image06"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/a2" />

        <TextView
            android:id="@+id/textViewDailyPick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  每日精选"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="18sp" />
    </LinearLayout>

    <!-- 第六行到第八行的ImageView -->
    <ImageView
        android:id="@+id/image07"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="left"
        android:layout_marginTop="16dp"
        android:src="@drawable/c1" />

    <ImageView
        android:id="@+id/image08"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/c2" />

    <ImageView
        android:id="@+id/image09"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/c3" />

</LinearLayout>