<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:id="@+id/home"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:orientation="vertical"
android:padding="10dp"
android:background="@drawable/background_mui"
tools:context=".HomeActivity">

<FrameLayout
    android:id="@+id/content"
    android:layout_above="@id/bottomNavigationView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>


<LinearLayout
    android:id="@+id/function"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:orientation="horizontal"
    android:layout_marginTop="300dp"
    >

    <Button
        android:id="@+id/bt_camera"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="1dp"
        android:background="@drawable/camera"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck"
        />

    <Button
        android:id="@+id/microphone"
        android:layout_width="186dp"
        android:layout_height="106dp"
        android:layout_marginTop="42dp"
        android:layout_marginRight="3dp"
        android:background="@drawable/miccrophone"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck"
        />

</LinearLayout>

<TextView
    android:id="@+id/textview_home"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:text="鸟界趣闻"
    android:textColor="#084B0A"
    android:textSize="20sp"
    android:layout_marginLeft="10dp"
    android:layout_below="@id/function"
    android:layout_marginTop="18dp"
    />

<LinearLayout
    android:layout_below="@id/textview_home"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:orientation="horizontal"
    android:layout_marginTop="0dp"
    >

    <Button
        android:id="@+id/bt3"
        android:layout_width="160dp"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:background="@drawable/redbird"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        >

        <Button
            android:id="@+id/bt4"
            android:layout_width="160dp"
            android:layout_height="88dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="25dp"
            android:background="@drawable/birdrigh"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck"
            />

        <Button
            android:id="@+id/bt5"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="25dp"
            android:background="@drawable/yellowbird"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck"
            />

    </LinearLayout>
</LinearLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rectangle2"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/navigation"
        />

</RelativeLayout>