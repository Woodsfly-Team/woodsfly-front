<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="880dp"
    android:orientation="vertical"
    android:background="@drawable/yonghuye"
    tools:context=".ui.notifications.NotificationsFragment" >
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/mine">




        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="90dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/bg_person" />

        <Button
            android:id="@+id/button2"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:backgroundTint="#71A85E"
            android:text="注册/登录"
            android:textColor="@color/white"
            android:layout_gravity="center"/>

        <LinearLayout
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="45dp"
            android:orientation="horizontal">

            <TextView

                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:layout_weight="4"
                android:drawableStart="@drawable/ic_info"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:text="帮助与反馈" />

            <ImageView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_arrow_right" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:drawablePadding="8dp"
                android:text="浏览记录"
                android:drawableStart="@drawable/ic_star_half"
                android:gravity="center_vertical"
                />


            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/ic_arrow_right" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">



            <TextView
                android:id="@+id/textView4"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="50dp"
                android:text="收藏"
                android:drawableStart="@drawable/ic_settings"
                android:gravity="center_vertical"
                android:drawablePadding="8dp"
                android:layout_marginStart="16dp"
                />


            <ImageView

                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/ic_arrow_right" />

        </LinearLayout>

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/ps_color_eb"
            android:text="退出登录"
            android:textColor="#5FAB5C"
            android:layout_gravity="center"
           />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/personal_pic"
            android:layout_marginBottom="700dp"
            android:layout_marginTop="15dp"
            tools:ignore="MissingConstraints" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>